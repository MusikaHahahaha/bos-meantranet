.navbar.navbar-inverse.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      .small-logo-container
        a.small-logo(href='/') Big Outsource

    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/') Home
        li(class=(title == 'API Examples') ? 'active' : undefined)
          a(href='/api') API Examples
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact
        li
          a(href='/status') Status
        li(class=(title == 'Applicant Exam') ? 'active' : undefined)
          a(href='/applicant/exam') Applicant exam
        li.dropdown(class=(title == 'Intern Tools') ? 'active' : undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown') Intern Tools
            b.caret
          ul.dropdown-menu
            li(class=(title == 'Assessment Score Data Entry Form') ? 'active' : undefined)
              a(href='/intern/assessment-form') Assessment Score Data Entry Form
            li.divider
            li(class=(title == 'Web Crawler') ? 'active' : undefined)
              a(href='/crawler') Web Crawler
            li(class=(title == 'Consequence Picker') ? 'active' : undefined)
              a(href='/intern/consequence-picker') Consequence Picker
        li.dropdown(class=(title == 'Admin Tools') ? 'active' : undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown') Admin Tools
            b.caret
          ul.dropdown-menu
            li(class=(title == 'Assessment Scores') ? 'active' : undefined)
              a(href='/applicant/scores') Assessment Scores


      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout

